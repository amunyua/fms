
@{
    ViewBag.Title = "StationDashboard";
    Layout = "~/Views/Shared/_stationDashborad.cshtml";
}

<div class="row">
    <input type="hidden" id="StationChannelId" value="@ViewBag.stationId"/>
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border col-md-12">
                <h3 class="box-title col-md-2" style="margin-top: 10px;">Sales Report</h3>
                <div class="form-group col-md-4 pull-right">
                    <select class="form-control col-md-6 " id="station-sales-range">
                        <option value="month-to-date">Month to date</option>
                        <option value="quater-to-date">Quater to date</option>
                        <option value="year-to-date">Year to date</option>
                    </select>
                </div>


                @*<div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-wrench"></i></button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </div>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>*@
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="">
                <div class="row">
                    <div class="col-md-8">
                        <p class="text-center">
                            @{
                                var todaysDate = DateTime.Now;
                                var startOfthisMonth = new DateTime(todaysDate.Year, todaysDate.Month, 1);

                                <strong>Sales: @startOfthisMonth.ToString("ddd d,MM,yyyy") - @todaysDate.ToString("ddd d,MM,yyyy")</strong>

                            }
                        </p>

                        <div class="chart">
                            <!-- Sales Chart Canvas -->
                            <canvas id="myChart" style="height: 180px;"></canvas>
                        </div>
                        <!-- /.chart-responsive -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-4">
                        <p class="text-center">
                            <strong>Sales By Payment Modes</strong>
                        </p>
                        
                        <div id="below-payment-modes">

                        </div>

                        <!-- /.progress-group -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>

            <!-- ./box-body -->
            <div class="box-footer">
                <div class="row" id="tanks-row">
                    <div id="insert-after"></div>

                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-footer -->
        </div>
        <!-- /.box -->
    </div>



    <!-- /.col -->
</div>

<div class="row">
    <div class="col-md-6">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Attendant Performance</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body ">
                <div class="row">
                    <div id="after-best-per" class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group col-md-4 pull-right">
                                    <select class="form-control col-md-6 " id="attendance-performance">
                                        <option value="month-to-date">Month to date</option>
                                        <option value="quater-to-date">Quater to date</option>
                                        <option value="year-to-date">Year to date</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer clearfix">
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Attendant Cash Drops</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body ">
                <div class="row">
                    <div id="after-best-perfoming" class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group col-md-4 pull-right">
                                    <select class="form-control col-md-6 " id="cashdrops">
                                        <option value="month-to-date">Month to date</option>
                                        <option value="quater-to-date">Quater to date</option>
                                        <option value="year-to-date">Year to date</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="chart">
                                    <!-- Sales Chart Canvas -->
                                    <canvas id="attendant-performance-chart" style="height: 200px;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer clearfix">
            </div>
        </div>
    </div>
    
  
</div>
<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Tank Fuel Levels</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body ">
                <div class="row">
                    <div id="station-tank-levels" class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group col-md-2">

                                </div>
                               
                            </div>
                            <div class="col-md-12">
                                <div class="chart">
                                    <!-- Sales Chart Canvas -->
                                    <canvas id="tank-levels" style="height: 300px;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer clearfix">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Pump Summary</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body ">
                <div class="row">
                    <div id="after-summary" class="col-md-12">
                        <div class="row">
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer clearfix">
            </div>
        </div>
    </div>
    


</div>


@section Scripts{
    <script src="@Url.Content("~/Scripts/dashboard/stationmodecharts.js")"></script>

}
