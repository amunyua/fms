@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Basic_layout.cshtml";
}
@model Tuple<List<StationLinerMVC.Models.Station>, List<StationLinerMVC.Models.ProductStationPrice>>
<!-- DataTables -->

