@section Scripts{
    <script>
        $('.edit-supplier-driver').on('click',
            function() {
                var id = $(this).attr('edit-id');
//                alert(id);
                $('#p-id').val('').val(id);
                if (id != "") {
                    var data = {
                        "vehicleId":id
                    }
                    $.ajax({
                        url: "/Suppliers/GetEditVehicleDetails",
                        type: "POST",
                        dataType: "json",
                        data: data,
                        success:function(data) {
                            if (data) {
                                $("#edit-vreg").val(data["RegNumber"]);
                                $("#edit-max-cap").val(data["MaximumCapacity"]);
                            }
                        }
                });
                }
                
            });
    </script>
}
