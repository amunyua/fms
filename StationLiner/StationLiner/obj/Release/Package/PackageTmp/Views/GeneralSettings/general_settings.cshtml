@model IEnumerable<StationLinerMVC.Models.GeneralSettings>
<div class="row">
    <div class="col-md-12">
        <ul class="list-inline list-unstyled  pull-right">
            @*            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>*@
            <li>System Settings</li>
            <li>></li>
            <li class="active">General Settings</li>
        </ul>
    </div>
   
</div>
<br />

<ul class="list-unstyled pull-right">
    <li><a href="#add-modal-setting" data-toggle="modal" class="btn btn-sm btn-primary">Create New</a></li>                      
</ul>
<br /><br />

<div class="box box-solid box-primary">
    <div class="box-header">
        <h3 class="box-title">General settings</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @{Html.RenderPartial("partials/_message");}

        <table id="example2" class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VAT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PinNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact2)
                </th>
                @{
                    if (Flag.Status("EDIT"))
                    {
                        <th>Edit</th>
                    }

                    if (Flag.Status("DELETE"))
                    {
                        <th>Delete</th>
                    }
                } 
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {

                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.VAT)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PinNumber)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Contact1)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Contact2)
                    </td>
                    @{
                        if (Flag.Status("EDIT"))
                        {
                            <td>
                                <a href="#edit-modal-setting" data-toggle="modal" edit-id="@item.Id" class="btn btn-xs btn-primary edit-setting"><i class="fa fa-edit"> </i> Edit</a>

                            </td>
                        }
                        if (Flag.Status("DELETE"))
                        {
                            <td>
                                <a data-toggle="modal" data-target="#delete-modal" action="@Url.Action("Delete", new {id = item.Id})" class="btn btn-xs btn-danger delete-btn"><i class="fa fa-recycle"> </i> Delete</a>
                            </td>
                        }
                    }
                </tr>

            }
            </tbody>
        </table>

        @*modal*@
        <div class="modal fade" id="delete-modal" role="dialog">
            <form id="delete-modal-form" action="" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title">Delete Setting</h4>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this Setting?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">No</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </form>
        </div>
    </div>

    
@*    modal for add*@
    <div class="modal fade" id="add-modal-setting" role="dialog">
        <form id="" action="@Url.Action("Create")" method="post">
            @Html.AntiForgeryToken()
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Create setting</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="" class="control-label">Company Name:</label>
                            <input type="text" class="form-control" id="" name="CompanyName" required="required">
                        </div>
                        
                        <div class="form-group">
                            <label for="" class="control-label">PIN number:</label>
                            <input type="text" class="form-control" id="" name="PinNumber" required="required">
                        </div>
                        <div class="form-group">
                            <label for="" class="control-label">VAT Number:</label>
                            <input type="text" class="form-control" id="" name="VAT" required="required">
                        </div>
                        
                        <div class="form-group">
                            <label for="" class="control-label">Location:</label>
                            <input type="text" class="form-control" id="" name="Location" required="required">
                        </div>
                        <div class="form-group">
                            <label for="" class="control-label">Contact 1:</label>
                            <input type="number" class="form-control" id="" name="Contact1" required="required">
                        </div>
                        <div class="form-group">
                            <label for="" class="control-label">Contact 2:</label>
                            <input type="number" class="form-control" id="" name="Contact2" >
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </form>
    </div>
    
@*    modal for edit*@
<div class="modal fade" id="edit-modal-setting" role="dialog">
    <form id="" action="@Url.Action("Edit")" method="post">
        @Html.AntiForgeryToken()
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Edit setting</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="" class="control-label">Company Name:</label>
                        <input type="text" class="form-control" id="company-name" name="CompanyName" required="required">
                    </div>
                        
                    <div class="form-group">
                        <label for="" class="control-label">PIN number:</label>
                        <input type="text" class="form-control" id="pin" name="PinNumber" required="required">
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">Vat nummber:</label>
                        <input type="text" class="form-control" id="vat" name="VAT" required="required">
                    </div>
                        
                    <div class="form-group">
                        <label for="" class="control-label">Location:</label>
                        <input type="text" class="form-control" id="location" name="Location" required="required">
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">Contact 1:</label>
                        <input type="number" class="form-control" id="contact1" name="Contact1" required="required">
                    </div>
                    <div class="form-group">
                        <label for="" class="control-label">Contact 2:</label>
                        <input type="number" class="form-control" id="contact2" name="Contact2" >
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="Id" id="edit-setting-id"/>
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </form>
</div>
</div>



