@using System.Data.Entity
@using StationLinerMVC.Models
<form action="@Url.Action("StationBasicDetails")" method="post" id="basic-details-form">

    <div class="col-sm-12">
        <div class="col-sm-6 form-group">
            @*            <label for="transaction-type" class="col-sm-2 control-label">Station Name</label>*@
            <div class="col-sm-10">
                <div class="col-sm-12">
                    <input type="text" name="StationName" id="StationName" class="form-control" placeholder="Station Name" required />
                </div>
            </div>
        </div>

        <div class="col-sm-6 form-group">
            @*            <label for="transaction-category" class="col-sm-2 control-label">Transaction Category</label>*@
            <div class="col-sm-10">
                <div class="col-sm-12">
                    <input type="text" name="StationDescription" id="StationDescription" class="form-control" placeholder="Station Description"  />
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-12">

        <div class="col-sm-6 form-group">
            <div class="col-sm-10">
                <div class="col-sm-12">
                    @Html.DropDownList("Country", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="col-sm-6 form-group">
            @*            <label for="transaction-category" class="col-sm-2 control-label">Transaction Category</label>*@
            <div class="col-sm-10">
                <div class="col-sm-12">
                    <input type="text" name="City" id="City" class="form-control" placeholder="City" required />
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="col-sm-6 form-group">
            @*            <label for="transaction-type" class="col-sm-2 control-label">Station Name</label>*@
            <div class="col-sm-10">
                <div class="col-sm-12">
                    <input type="text" name="Address" id="Address" class="form-control" placeholder="Address" required />
                </div>
            </div>
        </div>
    </div>
    @{
        using (IMSDataEntities db = new IMSDataEntities())
        {
            var shifts = db.ShiftCategories.Where(x=>x.IsDeleted != true);
            if (shifts.Any())
            {
                
                foreach (var shift in shifts)
                {
  
                
                    <div class="col-sm-12">
                       
                        <div class="col-sm-6 form-group ">
                            <div class="col-sm-10">
                                <div class="col-sm-12">
                                    @*                                <input type="checkbox" name="shift/@shift.Id" />*@
                                    <input type="checkbox" name="Shifts[]" value="@shift.Id" class="shifts-check minimal has-success" /><label style="margin-left: 20px" for="" class=" control-label">@shift.ShiftName</label>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    }
   
    
</form>
@*<hr/>*@
